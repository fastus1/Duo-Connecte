# JWT Secret for session tokens (generate a long random string)
JWT_SECRET=dev_secret_key_12345

# Database URL (PostgreSQL)
# default to local postgres if available, user may need to update this
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/duoconnecte

# Development mode (set to "true" to bypass Circle.so authentication)
VITE_DEV_MODE=true

# Circle.so configuration
VITE_CIRCLE_ORIGIN=https://your-space.circle.so

# Session configuration (in milliseconds)
SESSION_TIMEOUT=3600000

# PIN rate limiting
PIN_ATTEMPTS_LIMIT=5
PIN_ATTEMPTS_WINDOW=900000

# Server port
PORT=5000

# Node environment
NODE_ENV=development
